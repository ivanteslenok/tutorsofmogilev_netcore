@{
    ViewData["Title"] = "Загрузка фото";
    ViewBag.MenuActive = "Оставить заявку";
}

@section Styles
    {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/resume.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/resume.min.css" asp-append-version="true" />
    </environment>
}

<h2 class="text-success">Ваша заявка сохранена</h2>

<form asp-controller="Resume"
      asp-action="LoadPhoto"
      asp-antiforgery="true"
      method="post"
      enctype="multipart/form-data">
    <div class="form-group col-md-4">
        <label class="control-label">Вы можете прикрепить фото к созданной заявке.</label>
        <input type="file" name="photo" />
    </div>
    <input class="btn btn-primary" type="submit" value="Загрузить" />
</form>


